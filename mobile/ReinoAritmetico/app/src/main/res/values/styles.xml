<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarRA</item>
    </style>

    <style name="ActionBarRA" parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="GameButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/game_button_text_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
